<h1>Edit Goal</h1>

<%= form_for @goal, url: goal_path(@goal.id) do |f| %>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_field :description %>
  </div>
  <div class="form-group">
    <%= f.label :reason %>
    <%= f.text_field :reason %>
  </div>
  <div class="form-group">
    <%= f.label :time_frame %>
    <%= f.select :time_frame, options_for_select(1..52) %>
  </div>
  <div class="form-group">
    <%= f.submit "Save Changes" %>
  </div>

<% end %>


