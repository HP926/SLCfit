
<div class="container-fluid">
  <div class="row">
    <div class="col-md-2">
      <div class="row side-nav">
        <%= render(partial: 'shared/side_nav') %>
      </div>
    </div>
    <div class="col-md-9">
      <h2>Edit Goal</h2>
      <hr />
      <%= form_for @goal, url: goal_path(@goal.id) do |f| %>

        <div class="form-group">
          <%= f.label :description %>
          <%= f.text_field :description %>
        </div>
        <div class="form-group">
          <%= f.label :reason %>
          <%= f.text_field :reason %>
        </div>
        <div class="form-group">
          <%= f.label :time_frame %>
          <%= f.select :time_frame, options_for_select(1..52) %>
        </div>
        <div class="form-group">
          <%= f.submit "Save Changes" %>
        </div>

      <% end %>

          <div class="form-group">
            <p><%= f.label('why do you want to acheive this goal?') %></p>
            <p><%= f.text_area :reason, class: "custom-input"  %></p>
          </div>

          <div class="form-group">
            <p><%= f.label('time frame (weeks)') %></p>
            <p><%= f.select :time_frame, options_for_select(1..52), class: "custom-input"  %></p>
          </div>

          <div class="form-group">
            <%= f.submit "Save Changes", class: "custom-submit" %>
          </div>

        <% end %>
      </div>
    </div>
  </div>
</div>
<div class="row footer">
  <p>footer</p>
</div>


