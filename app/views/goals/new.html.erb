<div class="container-fluid">
  <div class="row">
    <div class="col-md-2">
      <div class="row side-nav">
        <%= render(partial: 'shared/side_nav') %>
      </div>
    </div>
    <div class="col-md-10"><%= form_for @goal do |f| %>
      <h2 class="page-header">New Goal</h1>
      <div class="form-group">
        <%=  f.label('Description') %>
        <br>
        <%= f.text_area :description %>
      </div>

      <div class="form-group">
        <%=  f.label('Reason') %>
        <br>
        <%= f.text_area :reason %>
      </div>

      <div class="form-group">
        <%=  f.label('Time Frame (Weeks)') %>
        <br>
        <%= f.select :time_frame, options_for_select(1..52) %> 
      </div>

      <button type="submit" class="btn btn-default">Create Goal</button>

    <% end %>
    
    </div>
  </div>
</div>