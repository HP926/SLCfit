<div class="row">
  <div class="col-md-2">
      <%= render(partial: 'shared/side_nav') %>
  </div>
  <div class="col-md-10 scroll">
    <div class="row">
      <div class="container">
        <h2 class="page-header">New Goal</h2>

        <%= form_for @goal do |f| %>

          <div class="form-group">
            <%= f.label('Description') %>
            <%= f.text_area :description, class: "custom-input" %>
          </div>

          <div class="form-group">
            <%= f.label('Reason') %>
            <%= f.text_area :reason, class: "custom-input" %>
          </div>

          <div class="form-group">
            <%= f.label('Time Frame (Weeks)') %>
            <%= f.select :time_frame, options_for_select(1..52), class: "custom-input" %> 
          </div>

          <div class="form-group">
            <%= f.submit "Create Goal", class: "custom-submit" %>
          </div>

        <% end %>
      </div>
   </div>
  </div>
</div>
<div class="row footer">
  <p>footer</p>
</div>
