        <p><% week.activities.complete.fri.each do |activity| %>
          <span class="<%= activity.icon %>"></span><br>
          <span class="<%= activity.type %>"></span><br>
        <% end %></p>
      </div>
    </div>
     <div class="thumbnail sat col-md-2">
      <div class="caption">
        <h5>saturday</h5>
        <hr>
        <p>blah blah blah</p>
        <p><% week.activities.complete.sat.each do |activity| %>
          <span class="<%= activity.icon %>"></span><br>
          <span class="<%= activity.type %>"></span><br>
        <% end %></p>
      </div>
    </div>
    </div>
    <div class="row">
      <div class="col-sm-12 col-md-12">
        <div class="thumbnail sun sun-thumb">
          <div class="caption">
            <h5>sunday</h5>
            <hr>
            <p>blah blah blah</p>
            <p><% week.activities.complete.sun.each do |activity| %>
              <span class="<%= activity.icon %>"></span><br>
              <span class="<%= activity.type %>"></span><br>
            <% end %></p>
          </div>
        </div>
      </div>
    </div>

  <div class="not-complete-container" style="padding-bottom: 25px;">
    <h3>Activity Bank</h3>
    <p>these are activities you have not completed.  select an activity to log it in your week, or add a new activity.</p>
    <hr>
    <div class="row">
      <% activities_not_complete.each do |activity|  %>
        <div class="col-lg-3">
          <input class="activity-check" data-activity-id="<%= activity.id %>" type="checkbox">
          <div class="activity-type-text">
            <%= activity.type %>
          </div>
        </div>
      <% end %>
    </div>
    <br>
    <div class="row">
      <button type="button" class="btn btn-default act-button" data-toggle="modal" data-target="#myModal<%= index %>">Add Activity</button>
      <button type="button" class="btn btn-default act-button" data-toggle="modal" data-target="#myModal">Log Activities</button>
    </div>
    <br>
    <br>
  </div>
  
</div>
</div>
