          <h5>wednesday</h5>
          <hr>
          <p>blah blah blah</p>
          <p><% week.activities.complete.wed.each do |activity| %>
            <span class="<%= activity.icon %>"></span><br>
            <span class="<%= activity.type %>"></span><br>
          <% end %></p>
      </div>
    </div>
    <div class="thumbnail thu col-md-2">
      <div class="caption">
        <h5>thursday</h5>
        <hr>
        <p>blah blah blah</p>
        <p><% week.activities.complete.thurs.each do |activity| %>
          <span class="<%= activity.icon %>"></span><br>
          <span class="<%= activity.type %>"></span><br>
        <% end %></p>
      </div>
    </div>
    <div class="thumbnail fri col-md-2">
      <div class="caption">
        <h5>friday</h5>
        <hr>
