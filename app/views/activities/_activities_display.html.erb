<div class="col-sm-12">
<h3 class=""><%= "Week #{index + 1}" %></h3>
  <div class="progress">
    <div class="progress-bar" role="progressbar" aria-valuenow="<%= activities_complete.length / (activities_complete.length+activities_not_complete.length) %>" aria-valuemin="0" aria-valuemax="1" style="width: <%= "#{((activities_complete.length.to_f / (activities_complete.length + activities_not_complete.length).to_f) * 100)}%" %> ;">
        <% if activities_complete.length != (activities_complete.length+activities_not_complete.length) %>
          <center>My Progress</center>
        <% else %>
          <center> Complete! </complete>
        <% end %>
    </div>
  </div>

<div class="row">
  <div class="col-sm-12 col-md-12">
    <div class="thumbnail mon col-md-2">
      <div class="caption">
        <h5>monday</h5>
        <hr>
        <p>blah blah blah</p>
        <% week.activities.complete.mon.each do |activity| %>
          <span class="<%= activity.icon %>"></span><br>
          <span class="<%= activity.type %>"></span><br>
          <% end %>
      </div>
    </div>
    <div class="thumbnail tue col-md-2">
      <div class="caption">
        <h5>tuesday</h5>
        <hr>
        <p>blah blah blah</p>
        <p><% week.activities.complete.tues.each do |activity| %>
          <span class="<%= activity.icon %>"></span><br>
          <span class="<%= activity.type %>"></span><br>
        <% end %></p>
      </div>
    </div>
      <div class="thumbnail wed col-md-2">
